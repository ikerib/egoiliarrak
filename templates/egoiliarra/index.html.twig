{% extends 'base.html.twig' %}

{% block title %}Egoiliarra index{% endblock %}

{% block body %}

    <h1>Zerrenda</h1>

    <div class="row">
        <div class="col-md-10">
            <ul class="list-inline">
                <li class="list-inline-item">
                    <a class="btn btn-outline-primary" href="{{ path('egoiliarra_new') }}"><i class="fas fa-plus-square"></i> Sortu berria</a>
                </li>
                <li class="list-inline-item">
                    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#divFiltroak" aria-expanded="false" aria-controls="collapseExample"><i class="fas fa-filter"></i></button>
                </li>
            </ul>
        </div>
        <div class="col-md-2">
            <p class="text-right">Erakusten {{ egoiliarras.getTotalItemCount| number_format(0, ',', '.') }} erregistro</p>
        </div>
    </div>
    <div class="row collapse" id="divFiltroak">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            {% include('egoiliarra/_search_form.html.twig') %}
        </div>
        <div class="col-md-3">

        </div>
    </div>

    <hr>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-sm table-bordered table-striped">
                <thead>
                <tr>
                    <th scope="col">{{ knp_pagination_sortable(egoiliarras, 'Izena', 'e.name') }}</th>
                    <th scope="col">{{ knp_pagination_sortable(egoiliarras, 'Matrikula', 'e.matrikula') }}</th>
                    <th scope="col">{{ knp_pagination_sortable(egoiliarras, 'Marka', 'e.marka') }}</th>
                    <th scope="col">{{ knp_pagination_sortable(egoiliarras, 'Modelo', 'e.modelo') }}</th>
                    <th scope="col">{{ knp_pagination_sortable(egoiliarras, 'Telefonoak', 'e.telefono1') }}</th>
                    <th scope="col">{{ knp_pagination_sortable(egoiliarras, 'Alkodea', 'e.AlKodea') }}</th>
                    <th scope="col">{{ knp_pagination_sortable(egoiliarras, 'Barrutia', 'e.barrutia.name') }}</th>
                    <th scope="col" width="200px" class="text-center"></th>
                </tr>
                </thead>
                <tbody>
                {% for egoiliarra in egoiliarras %}
                    <tr>
                        <td>{{ egoiliarra.name }}</td>
                        <td>{{ egoiliarra.matrikula }}</td>
                        <td>{{ egoiliarra.marka }}</td>
                        <td>{{ egoiliarra.modelo }}</td>
                        <td>{{ egoiliarra.telefono1 }} {{ egoiliarra.telefono2 }}</td>
                        <td>{{ egoiliarra.AlKodea }}</td>
                        <td>{{ egoiliarra.barrutia }}</td>
                        <td class="text-center">
                            <ul class="list-inline no-bottom-margin">
                                <li class="list-inline-item">
                                    <a class="btn btn-sm btn-outline-primary" href="{{ path('egoiliarra_show', {'id': egoiliarra.id}) }}"><i class="fas fa-eye"></i> Ikusi</a>
                                </li>

                                <li class="list-inline-item">
                                    <a class="btn btn-sm btn-outline-primary" href="{{ path('egoiliarra_edit', {'id': egoiliarra.id}) }}"><i class="fas fa-edit"></i> Aldatu</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="19">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="navigation justify-content-center">
                {{ knp_pagination_render(egoiliarras) }}
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>


{% endblock %}
